extends layout
block page
  - var menu = 'login'
block content
  .col-md-4.col-md-offset-4
    h2 登录
    div= error
    div
      form(action="/login", method="POST")
        p
          input.form-control(name="email", type="text", placeholder="用户名/手机号")
        p
          input.form-control(name="password", type="password", placeholder="6~20位数字、字母、符号")
        p
          button.btn.btn-lg.btn-primary.btn-block(type="submit") 登录
